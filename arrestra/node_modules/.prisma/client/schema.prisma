datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum LeadStatus {
  NEW
  CLAIMED
  CONTACTED
  DISMISSED
  WON
  LOST
}

model Lead {
  id         String     @id @default(cuid())
  fullName   String?
  county     String
  charge     String
  bailAmount Int?
  arrestTime DateTime
  score      Int        @default(0)
  source     String
  status     LeadStatus @default(NEW)
  createdAt  DateTime   @default(now())
}
